@page
@model Chatter.Auth.Api.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

    <div class="row">
        <div class="col-md-4">
            <h1 class="mt-t mb-3">Login</h1>
            <asp-route></asp-route>
            <form asp-route="Login">
                <input type="hidden" asp-for="Input.ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input class="form-control" asp-for="Input.Email" />
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input type="password" class="form-control" asp-for="Input.Password" />
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me?</label>
                </div>

                <div class="mt-4 mb-4">
                    <button class="btn btn-primary" value="login">Login</button>
                </div>
            </form>
        </div>
    </div>